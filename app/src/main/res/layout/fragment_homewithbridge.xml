<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.alterego.ibeaconapp.app.screens.homewithbridge.FragmentHomeWithBridge"
    tools:ignore="MissingPrefix">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:layout_marginBottom="@dimen/dialog_usernameconnect_edittext_margin"
        android:textColor="#ff0000"
        binding="{Text &lt;= ErrorDescription}; {Typeface &lt;- ToFont(this, &apos;default&apos;)}; {Visibility &lt;= ToVisibility(ErrorTextVisible)}"
        android:gravity="center"
        android:visibility="gone"/>

    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        binding="{Visibility &lt;= ToVisibility(ConnectingProgressBarVisible)}"
        android:visibility="gone"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="35dp"
        binding="{Click &lt;- RetryConnectingToBridge}; {Typeface &lt;- ToFont(this, &apos;default&apos;)}; {Visibility &lt;= ToVisibility(ErrorTextVisible)}"
        android:text="retry"
        android:visibility="gone"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="35dp"
        binding="{Click &lt;- SearchForNewLights}; {Typeface &lt;- ToFont(this, &apos;default&apos;)}; {Visibility &lt;= ToVisibility(SearchLightsVisible)}"
        android:text="search"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:layout_marginBottom="@dimen/dialog_usernameconnect_edittext_margin"
        android:text="connected to bridge"
        binding="{Typeface &lt;- ToFont(this, &apos;default&apos;)};"
        android:gravity="center"/>

</LinearLayout>
